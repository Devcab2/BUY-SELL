<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- External CSS -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/slidingMenu.css" type="text/css" />
    <link rel="stylesheet" href="/styles/favPage.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Add icon library -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <title>Fav Page</title>
  </head>

  <!-- Add icon library -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
  />

  <body>
    <%- include('partials/_slidingMenu') %>

    <header><%- include('partials/_header') %></header>

    <main>
      <div class="bodyContain">
        <ul class="booklist">
          <% for (const book of favBooks) { %>
          <li class="booklistItems">
            <img src="<%=book.image_url_s %>" alt="<%=book.book_title%>" />
            <div class="book-titles">
              <p><%=book.book_title%></p>
            </div>
            <div id="bookOptions">
              <i class="fa fa-commenting-o" aria-hidden="true"></i>
              <i class="fa fa-shopping-cart" aria-hidden="true"></i>
              <form method="POST" action="/api/favDelete/<%= book.id %>">
                <button type="submit">
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                </button>
              </form>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
    </main>

    <footer><%- include('partials/_footer') %></footer>
    <script>
      setTimeout(() => {
        window.location.href = window.location.origin + "/api/books";
      }, 3000);
    </script>
  </body>
</html>
